{
  "add-field-type": [
    {
      "name": "text_type",
      "class": "solr.TextField",
      "analyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "tdate",
      "class": "solr.TrieDateField",
      "precisionStep": 6
    }
  ],
  "add-dynamic-field": [
    {
      "name": "company_*",
      "type": "text_type",
      "indexed": true,
      "stored": true
    }
  ],
  "add-field": [
    {
      "name": "title",
      "type": "text_type",
      "indexed": true,
      "stored": true
    },
    {
      "name": "date",
      "type": "tdate",
      "indexed": true,
      "stored": true
    },
    {
      "name": "text",
      "type": "text_type",
      "indexed": true,
      "stored": true
    },
    {
      "name": "keypoints",
      "type": "text_type",
      "multiValued": true,
      "indexed": true,
      "stored": true
    },
    {
      "name": "keywords",
      "type": "text_type",
      "multiValued": true,
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_tag",
      "type": "string",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_name",
      "type": "string",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_description",
      "type": "text_type",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_keywords",
      "type": "text_type",
      "multiValued": true,
      "indexed": true,
      "stored": true
    },
    {
      "name": "companies",
      "type": "text_type",
      "multiValued": true,
      "indexed": true,
      "stored": true
    }
  ]
}
