{
  "add-field-type": [
    {
      "name": "tdate",
      "class": "solr.TrieDateField",
      "precisionStep": 6
    },
    {
      "name": "nested_doc",
      "class": "solr.NestPathField"
    },
    {
      "name": "stock_content",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class":"solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.StopFilterFactory",
            "ignoreCase": true,
            "words": "stopwords.txt",
            "format": "snowball"
          },
          {
            "class": "solr.SynonymFilterFactory",
            "synonyms": "synonyms.txt",
            "expand": "true"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "English"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class":"solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true
          },
          {
            "class": "solr.StopFilterFactory",
            "ignoreCase": true,
            "words": "stopwords.txt",
            "format": "snowball"
          },
          {
            "class": "solr.SynonymFilterFactory",
            "synonyms": "synonyms.txt",
            "expand": "true"
          },
          {
            "class": "solr.SnowballPorterFilterFactory",
            "language": "English"
          }
        ]
      }
    }
  ],
  "add-field": [
    {
      "name": "doc_type",
      "type": "string",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_link",
      "type": "string",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_title",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_date",
      "type": "tdate",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_text",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_keypoints",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_keywords",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "article_companies",
      "type": "nested_doc",
      "multiValued": true,
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_tag",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_name",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_description",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    },
    {
      "name": "company_keywords",
      "type": "stock_content",
      "indexed": true,
      "stored": true
    }
  ]
}
